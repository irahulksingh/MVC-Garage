@model IEnumerable<GarageMVC.Models.VehiclesModel>

@{
    ViewBag.Title = "Parking";
}

<h2>Check In</h2>

<p>
    @Html.ActionLink("Check In Vehicle", "Create", new { htmlAttributes = new { @class = "form-control" } })
</p>
<table  class="table table-striped table-bordered" cellspacing="0" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfWheels)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckInTime)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CheckOutTime)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @*@string RegNo = Registration Number;*@
            @Html.DisplayFor(modelItem => item.RegNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOfWheels)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckInTime)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.CheckOutTime)
        </td>*@
        <td>
            @*@Html.ActionLink("Modify Vehicle Details", "Edit", new { id=item.ID }) |*@
            @Html.ActionLink("Details of the Vehicle", "Details", new { id=item.ID} ) |
            @Html.ActionLink("CheckOut Vehicle", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
